<h1>Editing Restaurant #<%= @restaurant.id %></h1>


<%= form_tag(restaurant_url(@restaurant), method: 'patch') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @restaurant.name %>
  </div>

  <div>
    <%= label_tag :location %><br />
    <%= text_field_tag :location, @restaurant.location %>
  </div>

  <div>
    <%= label_tag :cuisine %><br />
    <%= text_field_tag :cuisine, @restaurant.cuisine %>
  </div>

  
  <div>
    <%= submit_tag "Update Restaurant" %>
  </div>

<% end %>
