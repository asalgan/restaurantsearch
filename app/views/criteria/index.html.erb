<div id="home">
	<div class="container">
		<%= form_tag "/menus", method: 'get' do %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 mainsection">
			<% if signed_in? %>
				<h1 class="mainheader">What would you like to eat, <%= current_user.name.capitalize.gsub(/\s.+/, '') %>?</h1>
			<% else %>
				<h1 class="mainheader">What would you like to eat?</h1>
			<% end %>
				<br>
				<br>
			<form role="form" class="main-form">
			  <div class="form-group">
			    <h2 class="homelabel"><%= label_tag :zipcode, "Where are you located?" %></h2>
			    <input type="text" Name="zip" class="form-control" id="zipcode" >
			  </div>
			  <br>
			  <div class="form-group">
			    <h2 class="homelabel"><%= label_tag :calories, "Maximum calories" %></h2>
			 	<div class="slider">
				  <input type = "range" min="0" max="1500" step="5" name="calories" onchange="rangevalue.value=value"/>
					<output id="rangevalue">750</output>
				</div>
				<h2 class="homelabel"><%= label_tag :category, "Category"%></h2>
					<select class="selectpicker" name="category" multiple>
						<% @categories.each do |category| %>
							<option><%= category.name %></option>
						<% end %>
			    </select>
			    	<p>
					 		<button type="submit" class="btn btn-primary btn-lg homepagebutton">Search</button>
						</p>
					<% if signed_in? %>
						<p class="navlinkshome"><%= link_to 'My Profile', current_user %> | <%= link_to "Sign Out", signout_path, method: "delete" %></p>
					<% else %>
						<p class="navlinkshome"><%= link_to 'Sign In', signin_path %> | <%= link_to ' Register', '/users/new' %></p>
					<% end %>
					<br>
			  </div>
			</form>
			<!-- <div class="map-canvas"></div> -->
		</div>
	</div>
	<% end %>
	</div>
</div>