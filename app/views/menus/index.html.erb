		<ul id="Grid" style="   ">

			
			<% @menus.each do |food| %>

				<li class="mix <%= food.category %> mix_all" data-cat="<%= food.category %>" style="  display: inline-block; opacity: 1;">
					<ol class="default">
						<i class="fa fa-star"></i>
						<li><span class="calorie-amount-per-item"><%= food.calories %></span></li>
						<li><span class="food-item"><%= food.item %></span></li>
						<li><span class="restaurant-name"><%= food.restaurant %></span></li>
