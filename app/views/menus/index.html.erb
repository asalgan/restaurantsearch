			<% @menus.each do |food| %>
			<li class="mix <%= food.category %> mix_all" data-cat="<%= food.category %>" style="  display: inline-block; opacity: 1;"><i class="fa fa-heart"></i> <%= food.item %> <span class="restaurant-name"><%= food.restaurant %></span><i class="fa fa-angle-double-right"></i></li>
			<% end %>
