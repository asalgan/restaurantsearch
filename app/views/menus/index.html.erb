<div id="sortpage">
  <div class="container">
	<div class="row">
		<% if params[:zip].present? %>
			<%= render 'foodpage_header' %> calories or less near <span id="foodpagezip"><%= params[:zip].chomp(", United States")  %></span> for you.<span class="editbutton"><%= link_to 'Edit', root_url %></span></p>
		<% else %>
			<%= render 'foodpage_header' %> calories or less for you.<span class="editbutton"><%= link_to 'Edit', root_url %></span></p>
		<% end %>
	</div><!--end row-->
	
			<p>
				<button class="view-profile"><%= link_to "View my favorite items (#{@favorite.count})", user_url(current_user), class: "btn btn-primary btn-lg view-profile-button" %></button>
			</p>
		<p class="red-explanation"><em>* Calories, fat, or carbs that exceed 1/3 of the FDA recommended daily intake are red. Check them out <a href="http://www.fda.gov/Food/GuidanceRegulation/GuidanceDocumentsRegulatoryInformation/LabelingNutrition/ucm064928.htm", target="blank">here</a>.</em></p>
		<ul id="Grid" style="   ">
			<% @menus.each do |food| %>
				<li class="mix <%= food.category %> mix_all" data-cat="<%= food.category %>" style="  display: inline-block; opacity: 1;" id="<%=food.id%>">
					<ol class="default">
						<li><i class="fa fa-star"></i></li>
						<li><span class="calorie-amount-per-item"><%= food.calories %></span></li>
						<li><span class="food-item"><%= food.item %></span></li>
						<li><span class="restaurant-name"><%= food.restaurant %></span></li>
							<!-- i class="fa fa-angle-double-right"></i> -->
					</ol>
					<div class="under">
						<div class="left">
							<ol>
								<li><i class="fa fa-star"></i></li>
								<li><%= food.item %></li>
								<li>
									<% if food.calories >= 667 %>
										<span class="over-dv"><%= food.calories %> calories</span>
									<% else %>
										<span><%= food.calories %> calories</span>
									<% end %>
								</li>
								<li>
									<% if food.fat >= 21.7 %>
										<span class="over-dv"><%= food.fat %>g fat</span>
									<% else %>
										<span><%= food.fat %>g fat</span>
									<% end %>
								</li>
							  <li>
							  	<% if food.carbs >= 100 %>
							  		<span class="over-dv"><%= food.carbs %>g carbs</span>
							  	<% else %>
							  		<span><%= food.carbs %>g carbs</span>
							  	<% end %>
							  </li>
							</ol>
						</div>
						<div class="right">
							<ol>
								<li>
									 0.67 miles away  <i class="fa fa-location-arrow right-links"></i>
								</li>
							</ol>
						</div>
					</div>
				</li>
			<% end %>
		</ul>
  </div><!--end container-->
</div><!--end sortpage-->

