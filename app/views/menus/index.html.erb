<div id="sortpage">
<div class="header-image"></div>
  <div class="container">

	<div class="row">
		<p class="paramslist" class="col-md-6">Showing <span id="foodpagecategory">
			<select class="selectpicker" name="category" >
				<option value="<%= params[:category].capitalize %>"><%= params[:category].capitalize %></option>
				<% @categories.each do |category| %>
				<option><%= category.name %></option>
				<% end %>
			</select>
			</span> with maximum <span id="foodpagecalories"><%= params[:calories] %> calories</span> 
			<!-- and <span id="foodpagefat"><%= params[:fat] %> (g) of fat</span>  -->
			near <span id="foodpagezip"><%= params[:zip] %></span><span class="editbutton"><%= link_to 'Edit', root_url %></span></p>
			<div class="randombox">
				<div class="randomcontent">
					<p class="random" id="randomitem"><%= @random.item %><br></p>
					<p class="random" id="randomcalories"><%= @random.calories %> calories<br></p>
					<p class="random" id="randomcategory"><%= @random.category %></p>
					Or <a href="/menus" id="refresh">pick something random for me</a>
				</div>
			</div>
	</div><!--end row-->

		<div class="controls">
			<ul>
				 <li class="filter" data-filter="all"><em>Show all</em></li>
				<% @categories.each do |category| %>
			    <li class="filter" data-filter="<%= category.name %>"><%= category.name %></li>
			    <% end %>
			</ul>
		</div>
		<hr class="line">
