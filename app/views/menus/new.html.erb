<h1>New Menu</h1>


<%= form_tag(menus_url, method: 'post') do %>


  <div>
    <%= label_tag :restaurant_id %><br />
    <%= number_field_tag :restaurant_id %>
  </div>

  <div>
    <%= label_tag :item %><br />
    <%= text_field_tag :item %>
  </div>

  <div>
    <%= label_tag :calories %><br />
    <%= number_field_tag :calories %>
  </div>

  <div>
    <%= label_tag :fat %><br />
    <%= number_field_tag :fat %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= number_field_tag :price %>
  </div>


  <div>
    <%= submit_tag "Create Menu" %>
  </div>
<% end %>
