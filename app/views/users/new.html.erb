<div id="registerpage">
  <div class="container">
    <div class="col-md-6 col-md-offset-3", id ="form-div">
      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <h1 class="formheader">Let's get started</h1>
      <hr>
        <div class="form-group">
          <%= f.label :name, "Name" %><br />
          <%= f.text_field :name, class: 'feedback-input form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email" %><br />
          <%= f.text_field :email, class: 'feedback-input form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, "Password" %><br />
          <%= f.password_field :password, class: 'feedback-input form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm Password" %><br />
          <%= f.password_field :password_confirmation, class: 'feedback-input form-control' %>
        </div>
        <div class="submit">
          <%= f.submit "Register &emsp;&rarr;".html_safe, class: "feedback-input button-blue btn btn-default" %>
        <div class="ease"></div>
            </div>
            <br>
            <hr>
            <%= link_to image_tag("facebook.png", :width => 300, :height => 60, :class => 'facebooklogin'), "/auth/facebook", id: "sign_in" %>
            <p id="signinlink">Have an account? <%= link_to "Sign in here", '/signin' %></p>
    <% end %>
  </div>
</div>