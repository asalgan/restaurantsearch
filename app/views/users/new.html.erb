<div id="registerpage">
  <div class="container">
    <form role="form" class="col-md-6 col-md-offset-3" id="form-div">
      <%= form_tag(users_url, method: 'post') do %>
      <h1 class="formheader">Register</h1>
        <div class="form-group">
          <%= label_tag :name, "Name" %><br />
          <%= text_field_tag :name, nil, :class => 'feedback-input form-control', :name => 'name' %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email" %><br />
          <%= text_field_tag :email, nil, :class => 'feedback-input form-control', :name => 'email' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, "Password" %><br />
          <%= password_field_tag :password, nil, :class => 'feedback-input form-control', :name => 'password' %>
        </div>
        <div class="submit">
          <%= submit_tag "Register &emsp;&rarr;".html_safe, :class => "feedback-input button-blue btn btn-default" %>
        <div class="ease"></div>
            </div>
    </form>
    <% end %>
  </div>
</div>