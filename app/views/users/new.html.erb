<div id="registerpage">
  <div class="container">
      <%= form_tag(users_url, method: 'post', :class => "col-md-6 col-md-offset-3", :id =>"form-div") do %>
      <h1 class="formheader">Register</h1>
      <hr>
        <div class="form-group">
          <%= label_tag :name, "Name" %><br />
          <%= text_field_tag :name, nil, :class => 'feedback-input form-control', :name => 'name' %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email" %><br />
          <%= text_field_tag :email, nil, :class => 'feedback-input form-control', :name => 'email' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, "Password" %><br />
          <%= password_field_tag :password, nil, :class => 'feedback-input form-control', :name => 'password' %>
        </div>
        <div class="form-group">
          <%= label_tag :password_confirmation, "Confirm Password" %><br />
          <%= password_field_tag :password_confirmation, nil, :class => 'feedback-input form-control', :name => 'password_confirmation' %>
        </div>
        <div class="submit">
          <%= submit_tag "Register &emsp;&rarr;".html_safe, :class => "feedback-input button-blue btn btn-default" %>
        <div class="ease"></div>
            </div>
    <% end %>
  </div>
</div>