<div id="signinpage">
	<div class="container">
		<form role="form" class="col-md-6 col-md-offset-3" id="form-div">
			<%= form_tag sessions_url do %>
		  	<h1 class="formheader">Sign In</h1>
		  <div class="form-group">
		    <%= label_tag :email, "Email"%><br>
		    <%= text_field_tag :email, nil, :class => 'feedback-input form-control', :name => 'email'%>
		  </div>
		  <div class="form-group">
		    <%= label_tag :password, "Password"%><br>
		    <%= password_field_tag :password, nil, :class => 'feedback-input form-control' %>
		  </div>
		  <div class="submit">
  			<%= submit_tag "Sign In &emsp;&rarr;".html_safe, :class => "feedback-input button-blue btn btn-default" %>
  			<div class="ease"></div>
  		</div>
		</form>
		<% end %>
	</div>
</div>