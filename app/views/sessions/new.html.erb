<div id="signinpage">
	<div class="container">
			<%= form_tag(sessions_url, method: 'post', :class => "col-md-6 col-md-offset-3", :id => "form-div") do %>
		  	<h1 class="formheader">Sign In</h1>
		  	<hr>
		  	<h3 class="notice"><%= notice %></h3>
		  <div class="form-group">
		    <%= label_tag :email, "Email"%><br>
		    <%= text_field_tag :email, nil, :class => 'feedback-input form-control', :name => 'email'%>
		  </div>
		  <div class="form-group">
		    <%= label_tag :password, "Password"%><br>
		    <%= password_field_tag :password, nil, :class => 'feedback-input form-control' %>
		  </div>
		  <div class="submit">
  			<%= submit_tag "Sign In &emsp;&rarr;".html_safe, :class => "feedback-input button-blue btn btn-default" %>
  			<div class="ease"></div>
  		</div>
  		<br>
  		<hr>
  		 <%= link_to image_tag("facebook.png", :width => 300, :height => 60, :class => 'facebooklogin'), "/auth/facebook", id: "sign_in" %>
		<% end %>
		<!-- <div id="user_nav">
		  <% if current_user %>
		    Signed in as <strong><%= current_user.name %></strong>!
		    <%= link_to "Sign out", signout_path, id: "sign_out" %>
		  <% else %>
		  <% end %>
		</div> -->
	</div>
</div>