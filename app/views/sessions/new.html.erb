<div id="signinpage">
	<div class="container">
		<div class="col-md-6 col-md-offset-3", id ="form-div">
			<%= form_for(:session, url: sessions_path) do |f| %>
		  	<h1 class="formheader">Sign In</h1>
		  	<hr>
		  	<h3 class="notice"><%= notice %></h3>
		  <div class="form-group">
		    <%= f.label :email, "Email" %><br>
		    <%= f.text_field :email, class: 'feedback-input form-control' %>
		  </div>
		  <div class="form-group">
		    <%= f.label :password, "Password"%><br>
		    <%= f.password_field :password, class: 'feedback-input form-control' %>
		  </div>
		  <div class="submit">
  			<%= f.submit "Sign In &emsp;&rarr;".html_safe, class: "feedback-input button-blue btn btn-default" %>
  			<div class="ease"></div>
  		</div>
  		<br>
  		<hr>
  		 <%= link_to image_tag("facebook.png", :width => 300, :height => 60, :class => 'facebooklogin'), "/auth/facebook", id: "sign_in" %>

  		 <p id="newuserlink">New user? <%= link_to "Sign up now!", 'users/new' %></p>
		<% end %>
	</div>
</div>