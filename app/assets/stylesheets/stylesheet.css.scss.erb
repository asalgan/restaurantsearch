#Grid {
	padding-top:20px;
	width: 100%;
	font-size: 0.1px;
	padding-left: 0;

	.gap {
		display: inline-block;
		width: 20px;
	 }

	.mix {
		display: none;
		opacity: 0;
		width: 100%;
		height: 56px;
		color: #333;
		font-size: 18px;
		text-align: left;
		line-height: 20px;
		float: left;
		font-weight: 300;
		padding-top: 17px;
		padding-bottom: 17px;
		border-bottom: 1px solid #E8E8E8 ;
		@extend %webkit_easing;
	  -webkit-font-smoothing: antialiased;

	  &.show {
			display: none;
	  }

		.calorie-amount-per-item {
			color: #787878 ;
			font-size: 16px;
			padding: 4px 8px;
			border-radius: 5px;
			background-color: #F0F0F0 ;
			margin-right: 10px;
			font-weight: 400;
		}

		&:hover {
			background-color: #e7e7e7;
		}

		&:after {
		content: '';
		display: inline;
		width: 100%;
	  }

	  &:hover .under {
			display: inline;
			cursor: default;
		}

		&:hover .default {
			display: none;
		}
		
		.restaurant-name {
			font-size: 15px;
			color: gray;
			padding-left: 5px;
		}

		.under {
			display: none;
			width: 100%;
			position: relative;

			.right {
				float: right;
				margin-top: -5px;
			}

			.right-links {
				border: 3px solid white;
				padding: 5px 10px;
				margin-right: 15px;
				margin-left: 5px;

				&:hover {
					background-color: white;
					cursor: pointer;
					@extend %webkit_easing;
				}
			}
		}

		.default, .under {
			
			li {
				display: inline;
			}

			.left {
				float: left;

				ol li {
					border-left: 1px solid gray;
					padding-left: 10px;
					padding-right: 10px;

					&:first-child {
						border-left: none;
						padding-left: 0px;
						padding-right: 0px;
					}
				}
			}
		}
	}
}

